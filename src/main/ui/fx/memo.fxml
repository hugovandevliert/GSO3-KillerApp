<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.ScrollPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.ui.controller.MemoController"
            prefHeight="750.0" prefWidth="1100.0">

    <Pane fx:id="paneHeader" prefHeight="100.0" prefWidth="1100.0">
        <children>
            <JFXButton fx:id="btnCreateMemo" layoutX="900.0" layoutY="31.0" prefWidth="150.0" style="-fx-background-color: #1DB01D" text="Create">
                <font>
                    <Font name="Segoe UI Semilight" size="18.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </JFXButton>
            <Label fx:id="lblMemos" layoutX="50.0" layoutY="30.0" text="Memo's">
                <font>
                    <Font name="Segoe UI Semibold" size="28.0" />
                </font>
            </Label>
        </children>
    </Pane>
    <Pane fx:id="paneContent" layoutY="100.0" prefHeight="625.0" prefWidth="1100.0" >
        <ScrollPane fx:id="scrollpaneListedMessages" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER"
                    prefHeight="500.0" prefWidth="1100.0" styleClass="edge-to-edge"
                    style="-fx-background: #FFFFFF;"/>
    </Pane>
</AnchorPane>
